@model Application.ViewModels.Movie.MovieViewModel
@{
    if (Model == null)
    {
        ViewBag.Title = "Add Movie";
    }
    else
    {
        ViewBag.Title = "Edit Movie";
    }

}
<h2>@ViewBag.Title</h2>
<form asp-controller="Movie" asp-action="AddOrEdit" method="post" enctype="multipart/form-data" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Title" class="col-form-label"></label>
            <input asp-for="Title" class="form-control" placeholder="Title">
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="ReleaseDate" class="col-form-label"></label>
            <input asp-for="ReleaseDate" class="form-control" placeholder="Release Date">
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="DurationInMinutes" class="col-form-label"></label>
            <input asp-for="DurationInMinutes" class="form-control" placeholder="Duration In Minutes">
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Genre" class="col-form-label"></label>

            <select class="form-control">
                <option>Adventure</option>
                <option>Action</option>
                <option>Thriller</option>
                <option>Comedy</option>
                <option>Romantic</option>
                <option>Drama</option>
                <option>Animation</option>
            </select>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Director" class="col-form-label"></label>
            <input asp-for="Director" class="form-control" placeholder="Director">
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="InStock" class="col-form-label"></label>
            <input asp-for="InStock" class="form-control" placeholder="In Stock">
        </div>

    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="~/images/photo.jpg" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-sm btn-outline-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>

</form>
